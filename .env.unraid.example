# Public app URL behind your reverse proxy
NEXT_PUBLIC_APP_URL=https://your-domain.example

# Host port exposed by the app container on Unraid
APP_HOST_PORT=3210

# Database settings used by the bundled postgres service
POSTGRES_USER=sizezero
POSTGRES_PASSWORD=replace-with-strong-db-password
POSTGRES_DB=sizezero
DB_DATA_PATH=/mnt/user/appdata/sizezero/postgres
UPLOADS_DATA_PATH=/mnt/user/appdata/sizezero/uploads

# Auth.js secret (at least 32 random chars)
AUTH_SECRET=replace-with-long-random-secret

# Initial admin account bootstrap (only this account is auto-created)
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=replace-with-strong-admin-password
INITIAL_ADMIN_DISPLAY_NAME=Admin

# Optional AI configuration
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
